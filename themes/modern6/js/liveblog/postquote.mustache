<div class="post quotecont{{#breaking}} breaking{{/breaking}}" data-post-id="{{{id}}}">
    <div class="row">
        <div class="time small-2 medium-1 columns">
            <div class="time">{{time}}</div>
        </div>
        <div class="small-10 medium-11 columns">
            <h5>{{#breaking}}<span class="label radius alert">BREAKING</span>&nbsp;{{/breaking}}{{{title}}}</h5>
        </div>
    </div>
    <div class="row">
        <div class="small-10 medium-11 columns quote small-offset-2 medium-offset-1">{{{data.data.text}}}</div>
    </div>
    <div class="row">
        <div class="small-10 medium-11 columns content small-offset-2 medium-offset-1">{{{data.data.cite}}}</div>
    </div>
</div>
